<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_8">


    <ImageView
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@id/l_line"
        app:layout_constraintRight_toLeftOf="@id/r_line"
        app:layout_constraintBottom_toTopOf="@id/b_line"
        app:layout_constraintTop_toBottomOf="@id/t_line"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:id="@+id/b_l"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/puzzle_b_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/b_r"
        android:src="@drawable/puzzle_b_r"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/b_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/puzzle_b_line"
        app:layout_constraintRight_toLeftOf="@id/b_r"
        app:layout_constraintLeft_toRightOf="@id/b_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/t_r"
        android:src="@drawable/puzzle_t_r"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/t_l"
        android:src="@drawable/puzzle_t_l"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/r_line"
        android:background="@drawable/puzzle_r_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b_r"
        app:layout_constraintTop_toBottomOf="@id/t_r"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/l_line"
        android:background="@drawable/puzzle_l_line"
        app:layout_constraintBottom_toTopOf="@id/b_l"
        app:layout_constraintTop_toBottomOf="@id/t_l"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/t_line"
        android:background="@drawable/puzzle_t_line"
        app:layout_constraintLeft_toRightOf="@id/t_l"
        app:layout_constraintRight_toLeftOf="@id/t_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



    <TextView
        android:text="Dad! You promised to tell us the most important story, remember?"
        android:textColor="@color/black"
        android:padding="@dimen/margin_8"
        android:gravity="center"
        android:id="@+id/tv_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/doctor_soos_bold_2_1"
        android:paddingLeft="@dimen/margin_16"
        android:paddingTop="@dimen/margin_8"
        android:paddingRight="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_8"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>
