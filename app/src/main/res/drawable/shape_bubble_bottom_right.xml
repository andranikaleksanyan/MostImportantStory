<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <item
        android:bottom="@dimen/speech_bubble_spacing"
        android:left="@dimen/speech_bubble_corners"
        android:right="@dimen/speech_bubble_corners_plus_tail"
        tools:height="50dp"
        tools:width="50dp">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- Set the border color of your layout here -->
                    <solid android:color="@color/black" />
                </shape>
            </item>

            <!-- This is for border bottom but
            you can change this according to your need -->
            <item
                android:bottom="1dp"
                android:top="1dp">
                <shape android:shape="rectangle">
                    <!-- Set the background color of your layout here -->
                    <solid android:color="@color/speech_bubble_user" />
                </shape>
            </item>

        </layer-list>

    </item>

    <!--    left rectangle-->
    <item
        android:width="@dimen/speech_bubble_corners"
        android:bottom="@dimen/speech_bubble_corners_plus_tail"
        android:gravity="left"
        android:left="1dp"
        android:top="@dimen/speech_bubble_corners">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <!-- Set the border color of your layout here -->
                    <solid android:color="@color/black" />
                </shape>
            </item>

            <item android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/speech_bubble_user" />
                </shape>
            </item>
        </layer-list>

    </item>

    <!--    right rectangle-->
    <item

        android:width="@dimen/speech_bubble_corners"
        android:bottom="@dimen/speech_bubble_corners_plus_tail"
        android:gravity="right"
        android:right="@dimen/speech_bubble_spacing"
        android:top="@dimen/speech_bubble_corners">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <!-- Set the border color of your layout here -->
                    <solid android:color="@color/black" />
                </shape>
            </item>

            <item android:right="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/speech_bubble_user" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!--    bottom left-->
    <item
        android:width="@dimen/speech_bubble_corners"
        android:height="@dimen/speech_bubble_corners"
        android:bottom="@dimen/speech_bubble_spacing"
        android:gravity="bottom|left"
        android:left="1dp">
        <layer-list>

            <item>
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/black"
                        android:pathData="M0,0 A10,10 0 0,0 10,10 L10,0 Z" />
                </vector>
            </item>

            <item
                android:bottom="1dp"
                android:left="1dp">
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/speech_bubble_user"
                        android:pathData="M0,0 A10,10 0 0,0 10,10 L10,0 Z" />
                </vector>
            </item>

        </layer-list>
    </item>

    <!--    top right-->
    <item
        android:width="@dimen/speech_bubble_corners"
        android:height="@dimen/speech_bubble_corners"
        android:gravity="top|right"
        android:right="@dimen/speech_bubble_spacing">
        <layer-list>

            <item>
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/black"
                        android:pathData="M10,10 A10,10 0 0,0 0,0 L0,10 Z" />

                </vector>
            </item>

            <item
                android:right="1dp"
                android:top="1dp">
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/speech_bubble_user"
                        android:pathData="M10,10 A10,10 0 0,0 0,0 L0,10 Z" />

                </vector>
            </item>

        </layer-list>

    </item>

    <!--    top left-->
    <item
        android:width="@dimen/speech_bubble_corners"
        android:height="@dimen/speech_bubble_corners"
        android:gravity="top|left"
        android:left="1dp">
        <layer-list>

            <item>
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/black"
                        android:pathData="M10,0 A10,10 0 0,0 0,10 L10,10 Z" />
                </vector>


            </item>

            <item
                android:left="1dp"
                android:top="1dp">
                <vector
                    android:width="@dimen/speech_bubble_corners"
                    android:height="@dimen/speech_bubble_corners"
                    android:viewportWidth="10.0"
                    android:viewportHeight="10.0">
                    <path
                        android:fillColor="@color/speech_bubble_user"
                        android:pathData="M10,0 A10,10 0 0,0 0,10 L10,10 Z" />
                </vector>


            </item>
        </layer-list>
    </item>

    <!--    bottom right-->
    <item
        android:width="@dimen/speech_bubble_corners_plus_tail"
        android:height="@dimen/speech_bubble_corners_plus_tail"
        android:gravity="bottom|right">
        <layer-list>

            <item
                android:width="@dimen/speech_bubble_corners_plus_tail"
                android:height="@dimen/speech_bubble_corners_plus_tail"
                android:gravity="bottom|right">
                <vector
                    android:width="@dimen/speech_bubble_corners_plus_tail"
                    android:height="@dimen/speech_bubble_corners_plus_tail"
                    android:viewportWidth="150.0"
                    android:viewportHeight="150.0">
                    <path
                        android:fillColor="@color/black"
                        android:pathData="M0,100 C7.67309143,100 14.1935201,100.346373 20.500756,99.0996492 C43.6628959,129.872031 94.1698247,146.306561 150.320843,150.792562 C113.168693,130.799632 87.2808993,98.5054948 81.0808824,68.6524321 C94.1277117,51.7595331 100,23.9957121 100,0 L0,0 L0,100 Z" />
                </vector>
            </item>

            <item
                android:bottom="1dp"
                android:right="1dp">
                <vector xmlns:android="http://schemas.android.com/apk/res/android"
                    android:width="@dimen/speech_bubble_corners_plus_tail"
                    android:height="@dimen/speech_bubble_corners_plus_tail"
                    android:viewportWidth="150.0"
                    android:viewportHeight="150.0">
                    <path
                        android:fillColor="@color/speech_bubble_user"
                        android:pathData="M0,100 C7.67309143,100 14.1935201,100.346373 20.500756,99.0996492 C43.6628959,129.872031 94.1698247,146.306561 150.320843,150.792562 C113.168693,130.799632 87.2808993,98.5054948 81.0808824,68.6524321 C94.1277117,51.7595331 100,23.9957121 100,0 L0,0 L0,100 Z" />
                </vector>
            </item>
        </layer-list>
    </item>

    <item
        android:bottom="10dp"
        android:left="3dp"
        android:right="7dp"
        android:top="5dp">
        <shape>
            <solid android:color="@color/white" />

        </shape>
    </item>

</layer-list>